<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_main"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutTopHEAD"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textViewHEAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Update for Coronavirus COVID-19 Global Cases"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#284452"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTopHEAD"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/layoutTopDate"
            android:orientation="horizontal" >

            <TextView
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDate"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textColor="#e16915" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutTopCases"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:background="@drawable/back_generic"
            android:layout_below="@+id/layoutTopDate"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Total Confirmed Cases"
                android:textColor="#006381"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:text="00000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCases"
                android:textSize="35dp"
                android:textAlignment="center"
                android:shadowColor="#777777"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textStyle="bold"
                android:textColor="#006381"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTopCases"
            android:background="@drawable/back_generic"
            android:id="@+id/layoutTopRecovered"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textViewRecoveredTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Total Recovered"
                android:textColor="#5A9100"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:text="00000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewRecovered"
                android:textSize="35dp"
                android:shadowColor="#777777"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#5A9100"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTopRecovered"
            android:background="@drawable/back_generic"
            android:id="@+id/layoutTopDeaths"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textViewDeathsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Total Deaths"
                android:textColor="#9a0000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:text="00000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDeaths"
                android:textSize="35dp"
                android:shadowColor="#777777"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#9a0000"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTopDeaths"
            android:background="@drawable/back_generic"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical" >

            <TextView
                android:text="Confirmed Cases by Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textCountriesHeader"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textColor="#284452" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/back_list_item" >

                <TextView
                    android:id="@+id/colCountryNameHEAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:textColor="#006381"
                    android:text="Country" >
                </TextView>

                <TextView
                    android:id="@+id/colCasesHEAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:textColor="#006381"
                    android:text="Cases" >
                </TextView>

                <TextView
                    android:id="@+id/colRecoveredHEAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:textColor="#5A9100"
                    android:text="Recovered" >
                </TextView>

                <TextView
                    android:id="@+id/colDeathsHEAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:textColor="#9a0000"
                    android:text="Deaths" >
                </TextView>

            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layoutCountriesHeader"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:id="@+id/listViewCountries">
            </ListView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

    </RelativeLayout>
</RelativeLayout>